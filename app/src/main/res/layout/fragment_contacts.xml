<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.fragment.ContactsFragment">

        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/bntBack"
                android:layout_width="43dp"
                android:layout_height="34dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_baseline_keyboard_backspace_24"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="Contacts"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_gravity="start"
                    android:textSize="28dp"
                    android:layout_marginLeft="27dp" />

                <Button
                    android:id="@+id/btnSync"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_gravity="end"
                    android:layout_marginLeft="130dp"
                    android:backgroundTint="@color/blue_gradient"
                    android:text="Sync"
                    android:textSize="10dp"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>

            <EditText
                android:layout_width="345dp"
                android:layout_height="50dp"
                android:hint="find in here"
                android:layout_marginTop="12dp"
                android:textStyle="italic"
                android:drawableLeft="@drawable/ic_baseline_find_in_page_24"
                android:layout_marginStart="22dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recycleContacts"
                tools:listitem="@layout/view_item"
                android:padding="@dimen/cardview_default_radius"
                android:layout_marginTop="10dp" />


        </LinearLayout>


    </FrameLayout>
</layout>